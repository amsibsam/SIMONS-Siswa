<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="itemSanksiViewModel"
            type="com.monitoringsiswa.monitoringsiswa.viewmodel.SanksiViewModel"/>
    </data>

<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_margin="3dp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:text="@{itemSanksiViewModel.batasPoin}"
            android:textStyle="bold" />

        <TextView
            android:layout_margin="3dp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:text="@{itemSanksiViewModel.nama}"
            android:textStyle="bold" />

        <TextView
            android:layout_margin="3dp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text='@{itemSanksiViewModel.shouldSetPoin ? "Centang" : "-"}'
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
</layout>